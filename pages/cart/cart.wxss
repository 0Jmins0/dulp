/* 容器样式 */
.container {
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.top-nav {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
  color: #0f3460;
  margin-right: 20rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f3460;
}

/* 购物车内容 */
.cart-content {
  flex: 1;
  padding: 20rpx;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 28rpx;
  color: #999999;
}

/* 购物车列表 */
.cart-list {
  padding-bottom: 200rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

/* 商品图片 */
.item-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.item-img {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #0f3460;
  line-height: 1.3;
}

.item-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f3460;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.minus-btn {
  background: #f0f0f0;
  color: #666666;
}

.plus-btn {
  background: #0f3460;
  color: #ffffff;
}

.quantity-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #0f3460;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

/* 删除按钮 */
.delete-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #ff4757;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.9);
}

/* 价格明细 */
.price-detail {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-item:last-child {
  margin-bottom: 0;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price-label {
  font-size: 28rpx;
  color: #666666;
}

.price-value {
  font-size: 28rpx;
  color: #0f3460;
  font-weight: bold;
}

.price-value.discount {
  color: #ff6b35;
}

.price-item.total .price-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #0f3460;
}

.price-item.total .price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f3460;
}

/* 底部结算栏 */
.bottom-checkout {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.checkout-left {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #666666;
  margin-right: 10rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f3460;
}

.checkout-btn {
  background: #0f3460;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  transition: all 0.3s ease;
}

.checkout-btn:active {
  transform: scale(0.95);
}

.checkout-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
}
