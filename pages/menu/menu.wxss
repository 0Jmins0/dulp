/* 容器样式 */
.container {
  height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.nav-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
  color: #0f3460;
  margin-right: 20rpx;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f3460;
}

.nav-right {
  display: flex;
  align-items: center;
}

.more-dots {
  font-size: 32rpx;
  color: #0f3460;
  margin-right: 20rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  background: #0f3460;
  border-radius: 50%;
}

/* 分隔线 */
.separator {
  height: 1rpx;
  background: #f0f0f0;
  margin: 0 30rpx;
}

/* 公告区域 */
.announcement-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.announcement-left {
  display: flex;
  align-items: center;
}

.announcement-icon {
  width: 40rpx;
  height: 40rpx;
  background: #0f3460;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.announcement-text {
  font-size: 28rpx;
  color: #666666;
}

.more-text {
  font-size: 24rpx;
  color: #0f3460;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 左侧分类菜单 */
.category-sidebar {
  width: 25%;
  background: #f8f9fa;
  border-right: 1rpx solid #f0f0f0;
}

.category-list {
  height: 100%;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.category-item.active {
  background: #e3f2fd;
  border-left: 4rpx solid #0f3460;
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #0f3460;
  text-align: center;
  line-height: 1.2;
}

/* 右侧菜品列表 */
.dish-content {
  flex: 1;
  background-color: #ffffff;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
  border-radius: 0 16rpx 16rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  overflow: hidden;
}
.dish-list {
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.dish-card {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: flex-start;
  box-sizing: border-box;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.dish-img {
  width: 100%;
  height: 100%;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #0f3460;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.dish-description {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.dish-sales {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 15rpx;
}

.dish-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f3460;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.minus-btn {
  background: #f0f0f0;
  color: #666666;
}

.plus-btn {
  background: #0f3460;
  color: #ffffff;
}

.quantity-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #0f3460;
  font-weight: bold;
  min-width: 40rpx;
  text-align: center;
}

/* 底部购物车栏 */
.bottom-cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #0f3460;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.cart-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.store-info {
  display: flex;
  flex-direction: column;
}

.store-name {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.store-address {
  font-size: 24rpx;
  color: #cccccc;
  line-height: 1.2;
}

.cart-right {
  display: flex;
  align-items: center;
  background: #ffffff;
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #0f3460;
  margin-right: 20rpx;
}

.cart-icon {
  position: relative;
}

.cart-bag {
  font-size: 32rpx;
}

.cart-count {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff6b35;
  color: #ffffff;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}
