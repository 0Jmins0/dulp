/* 外卖页面样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
}

.nav-left {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #333;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.nav-right {
  display: flex;
  align-items: center;
}

.more-dots {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #666;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

/* 分隔线 */
.separator {
  height: 2rpx;
  background-color: #e5e5e5;
}

/* 公告区域 */
.announcement-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
}

.announcement-left {
  display: flex;
  align-items: center;
}

.announcement-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #ff6b6b;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.announcement-text {
  font-size: 28rpx;
  color: #666;
}

.more-text {
  font-size: 24rpx;
  color: #999;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 左侧分类菜单 */
.category-sidebar {
  width: 200rpx;
  background-color: #ffffff;
  border-right: 1rpx solid #e5e5e5;
}

.category-list {
  height: 100%;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #fff5f5;
  border-left: 4rpx solid #ff6b6b;
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.category-item.active .category-name {
  color: #ff6b6b;
  font-weight: bold;
}

/* 右侧菜品列表 */
.dish-content {
  flex: 1;
  background-color: #ffffff;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
  border-radius: 0 16rpx 16rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  overflow: hidden;
}

.dish-list {
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.dish-card {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  align-items: flex-start;
  box-sizing: border-box;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.dish-img {
  width: 100%;
  height: 100%;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.dish-sales {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.dish-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b6b;
}

/* 数量控制 */
.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.minus-btn {
  background-color: #f0f0f0;
  color: #666;
}

.plus-btn {
  background-color: #ff6b6b;
  color: #ffffff;
}

.quantity-text {
  margin: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

/* 底部购物车栏 */
.bottom-cart-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.cart-left {
  display: flex;
  align-items: center;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.store-info {
  display: flex;
  flex-direction: column;
}

.store-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.store-address {
  font-size: 24rpx;
  color: #666;
}

.cart-right {
  display: flex;
  align-items: center;
  background-color: #ff6b6b;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-right: 20rpx;
}

.cart-icon {
  position: relative;
}

.cart-bag {
  font-size: 40rpx;
  color: #ffffff;
}

.cart-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4757;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
} 